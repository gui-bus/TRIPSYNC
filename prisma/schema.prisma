generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vacation {
  id           String   @id @default(uuid())
  name         String
  title        String
  description  String
  countries    String
  startDate    DateTime
  endDate      DateTime
  isPublic     Boolean? @default(false)
  participants String[] @default([])
  userId       String?
}
